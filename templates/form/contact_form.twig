{{ form_start(contact_form) }}
    <div class="row">
        <div class="col-6 form-group">
            {{ form_row(contact_form.currentPhpVersion) }}
        </div>

        <div class="col-6 form-group">
            {{ form_row(contact_form.framework) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12 form-group">
            {{ form_row(contact_form.message) }}
        </div>
    </div>

    <div class="row">
        <div class="col-6 form-group">
            {{ form_row(contact_form.name) }}
        </div>

        <div class="col-6 form-group">
            {{ form_row(contact_form.email) }}
        </div>
    </div>

    {# see Google Catpcha https://developers.google.com/recaptcha/docs/v3#}
    <script src="https://www.google.com/recaptcha/api.js"></script>

    <script type="application/javascript">
        function onSubmit(token) {
            alert(token);
            document.getElementById("contact_form").submit();
        }
     </script>
{{ form_end(contact_form) }}
