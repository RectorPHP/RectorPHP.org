{% extends "base.twig" %}

{# @var \Rector\Website\Blog\ValueObject\Post post #}
{% set page_title %}{{ post.title }}{% endset %}

{% block main %}
    <div id="post">
        <div class="mt-3">
            <time datetime="{{ post.dateTime|date('Y-m-D') }}" class="alt-mono-font text-grey text-smaller">
                {{ post.dateTime|date }}
            </time>
        </div>

        <h1>{{ post.title }}</h1>

        <div class="perex">{{ post.perex|markdown|raw }}</div>

        <div class="text-body">
            {{ post.htmlContent|raw }}
        </div>

        <br>
        <br>
        <br>

        <div class="container">
            {% include "_snippets/disqus_comments.twig" %}
        </div>

        <br>
    </div>
{% endblock %}
