{% extends 'base.twig' %}

{% set page_title %}Do you Want to Learn&nbsp;about&nbsp;Rector?{% endset %}

{% block main %}
    <div id="blog">
        <h1>
            Rector Blog
            <span class="float-right">
                <a href="{{ path('rss') }}" class="p-2">
                    <em class="fas fa-rss fa-fw fa-xs"></em>
                </a>
            </span>
        </h1>

        {% for post in posts %}
            <div class="mb-5">
                <h2>
                    <a href="{{ path('post', {'postSlug': post.slug }) }}">{{ post.title }}</a>
                </h2>

                <div class="mt-2 mono-font text-grey">
                    <time datetime="{{ post.dateTime|date('Y-m-D') }}">
                        {{ post.dateTime|date }}
                    </time>
                </div>

                <br>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
